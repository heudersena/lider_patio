{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "removeComments": true,
    "preserveConstEnums": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "typeRoots": [
    "./src/@types",
    "./custom_typings",
    "./@types",
    "./node_modules/@types"
  ]
}